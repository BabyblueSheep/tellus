<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>
  
	<ItemGroup>
		<ProjectReference Include="..\MoonWorks\MoonWorks.csproj" />
	</ItemGroup>
	
	<ItemGroup>
		<Content Include="Assets\**\*.*">
			<Link>Assets\%(RecursiveDir)%(Filename)%(Extension)</Link>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	
	<ItemGroup>
	  <Content Update="Assets\SpriteBatch.comp.hlsl" Link="Assets\SpriteBatch.comp.hlsl" />
	  <Content Update="Assets\TexturedQuad.frag.hlsl" Link="Assets\TexturedQuad.frag.hlsl" />
	  <Content Update="Assets\TexturedQuad.vert.hlsl" Link="Assets\TexturedQuad.vert.hlsl" />
	</ItemGroup>

</Project>
